<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://mainScreen.caption"
        messagesPack="com.company.test.web.screens">
    <layout margin="true, true, true, true">
        <vbox height="AUTO" width="AUTO">
            <lookupField id="tasks" align="TOP_CENTER" nullOptionVisible="false" nullName="Выберите задание"/>
            <hbox margin="true,false,true,false">
                <textArea height="115%" id="dataField" inputPrompt="msg://dataFieldPrompt"
                description="msg://dataFieldPrompt"/>
                <vbox spacing="true" margin="false, true, false, true">
                    <button caption="Посчитать" align="MIDDLE_CENTER" invoke="pressCountButton"/>
                    <button caption="Сохранить" align="MIDDLE_CENTER" invoke="saveData"/>
                    <upload id="uploadField" align="MIDDLE_CENTER" uploadButtonCaption="Загрузить"/>
                </vbox>
                <textArea height="115%" id="resultField" inputPrompt="Ожидаем данные..." editable="false"/>
            </hbox>
        </vbox>
    </layout>
</window>