<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://mainScreen.caption"
        messagesPack="com.company.test.web.screens">
    <layout margin="true, true, true, true">
        <vbox height="AUTO" width="AUTO">
            <lookupField id="tasks" nullOptionVisible="false" nullName="msg://lookUpField.null.caption"
                         align="TOP_CENTER"/>
            <hbox margin="true,false,true,false">
                <textArea id="dataField" height="115%" inputPrompt="msg://dataField.promptMessage"
                          description="msg://dataField.promptMessage"/>
                <vbox margin="false, true, false, true" spacing="true">
                    <button invoke="pressCountButton" caption="msg://countButton.caption" align="MIDDLE_CENTER"/>
                    <button invoke="saveData" caption="msg://saveButton.caption" align="MIDDLE_CENTER"/>
                    <upload id="uploadField" uploadButtonCaption="msg://uploadButton.caption" align="MIDDLE_CENTER"/>
                </vbox>
                <textArea id="resultField" height="115%" editable="false" inputPrompt="msg://resultField.promptMessage"/>
            </hbox>
        </vbox>
    </layout>
</window>